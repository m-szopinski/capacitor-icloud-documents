{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "declaration": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/esm",
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "module": "NodeNext",
		"target": "ES2020",
		"lib": ["ESNext", "dom"],
		"moduleResolution": "NodeNext",
  },
  "files": ["src/index.ts"]
}